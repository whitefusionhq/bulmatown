<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }}">
    {% render "navbar", metadata: site.metadata %}

    <main>
      {{ content }}
    </main>

    {% render "footer", url: site.url, metadata: site.metadata %}
  </body>
</html>
